
FROM python:3.5

RUN mkdir -p /code
WORKDIR /code

COPY requirements.txt /code
RUN pip install --no-cache-dir -r /code/requirements.txt

COPY ./site /code
COPY ./uwsgi /code
CMD ["/code/init.sh"]


MYSQL_USER=admin
MYSQL_DATABASE=test
MYSQL_ROOT_PASSWORD=admin
MYSQL_PASSWORD=123
MYSQL_CONTAINER_NAME=mysql
MYSQL_PORT=3306
